pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build stage: Hi, Hello!'
            }
        }

        stage('Test') {
            steps {
                echo 'Test stage: Displaying current date and time...'
                // Display the current date and time
                sh 'date'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage: Success'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
