pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
              checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'amin', url: 'https://github.com/Gowhar-Amin/Test.git']]) 
               
            }
        }
    stage ("Terraform init"){
        steps {
            sh("date");
        }
    }
    stage ("time"){
        steps {
            echo "Terraform action parameter is --> ${action}"
            sh("terraform ${action} --auto-approve");
            
        }
    }
  }
}
